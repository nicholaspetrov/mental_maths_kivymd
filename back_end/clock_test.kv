MDScreen:
    StackLayout:
        orientation: "lr-tb"
        MDRaisedButton:
            id: difficulty_button
            text: "Difficulty"
            size_hint: 1/3, 0.1
            on_release: app.difficulty_menu.open()

        MDRaisedButton:
            id: type_button
            text: "Type"
            size_hint: 1/3, 0.1
            on_release: app.type_menu.open()

        MDRaisedButton:
            id: duration_button
            text: "Duration"
            size_hint: 1/3, 0.1
            on_release: app.duration_menu.open()

    MDFloatLayout:

        MDRaisedButton:
            pos_hint: {"center_x": .5, "center_y": .4}
            text: "Start test"
        MDLabel:
            id: test_label
            halign: "center"
            text: ""