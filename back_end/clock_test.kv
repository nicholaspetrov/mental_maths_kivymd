<MyAppTopAppBar@MDTopAppBar>:
#   This is a reusable structure
    title: "Test"
#    elevation: 10
    pos_hint: {"top": 1}
    left_action_items: [["menu", lambda x: app.open_menu()]]
    right_action_items: [["logout", lambda x: app.exit_app()]]

MDScreen:

    id: test_screen
    name: "Quiz"
    MyAppTopAppBar

    MDGridLayout:
        size_hint_y: 0.8925
        rows: 2
        padding: 5, 5, 5, 5
        spacing: 5
#        size_hint_y: None
#        height: self.minimum_height
        MDProgressBar:
            id: user_test_progress_bar
            size_hint_y: .05
            size_hint_x: .65
            type: "determinate"
            value: 0
        MDGridLayout:
            height: self.minimum_height
            cols: 3

            MDGridLayout:
                cols: 3
                MDProgressBar:
                    id: incorrect_progress_bar
                    color: 'red'
                    orientation: 'vertical'
                    size_hint_y: .1
                    size_hint_x: .05
                    value: 100
                    type: "indeterminate"
                MDProgressBar:
                    id: incorrect_progress_bar
                    color: 'red'
                    orientation: 'vertical'
                    size_hint_y: .1
                    size_hint_x: .05
                    value: 50
                    type: "indeterminate"
                MDProgressBar:
                    id: incorrect_progress_bar
                    color: 'red'
                    orientation: 'vertical'
                    size_hint_y: .1
                    size_hint_x: .05
                    value: 0
                    type: "indeterminate"

            MDFloatLayout:

                MDLabel:
                    id: question_label
                    pos_hint: {"center_x": .5, "center_y": .65}
                    halign: 'center'
                    text: "Click button to start"
                    font_style: "H4"
                    theme_text_color: "Custom"
                    text_color: "blue"

                MDTextField:
                    id: answer_input
                    hint_text: "Enter answer"
                    mode: "rectangle"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    size_hint_x: None
                    width: 200
                    multiline: False
                    on_text_validate: app.get_next_question()
                    halign: "center"
                    disabled: True
                    focus: True

                MDRaisedButton:
                    id: next_button
                    pos_hint: {"center_x": .5, "center_y": .3}
                    font_style: "H5"
                    text: "Next question"
                    on_release: app.get_next_question()

            MDGridLayout:
                cols: 3

                MDProgressBar:
                    id: correct_progress_bar
                    color: 'green'
                    orientation: 'vertical'
                    size_hint_y: .1
                    size_hint_x: .05
                    value: 0
                    type: "indeterminate"
                MDProgressBar:
                    id: correct_progress_bar
                    color: 'green'
                    orientation: 'vertical'
                    size_hint_y: .1
                    size_hint_x: .05
                    value: 25
                    type: "indeterminate"
                MDProgressBar:
                    id: correct_progress_bar
                    color: 'green'
                    orientation: 'vertical'
                    size_hint_y: .1
                    size_hint_x: .05
                    value: 100
                    type: "indeterminate"





