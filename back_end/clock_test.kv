MDBoxLayout:
    orientation: "vertical"

    MDLabel:
        id: my_label
        text: "0%"

    MDProgressBar:
        id: my_progress_bar
        min: 0
        max: 100
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint_x: .8
        value: 0

    Button:
        text: 'Press me'
        on_press: app.press_it()