<Quiz@MDScreen>:
    id: test_screen
    name: "Quiz"

    MDFloatLayout:

        MDProgressBar:
            id: user_test_progress_bar
            size_hint_x: .65
            value: 0
            pos_hint: {"center_x": .5, "center_y": .8}
#            catching_duration: 10.5
            type: "determinate"


        MDLabel:
            id: question_label
            pos_hint: {"center_x": .5, "center_y": .65}
            halign: 'center'
            text: "Click button to start"
            font_style: "H4"
            theme_text_color: "Custom"
            text_color: "blue"

        MDTextField:
            id: answer_input
            hint_text: "Enter answer"
            mode: "rectangle"
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint_x: None
            width: 200
            multiline: False
            on_text_validate: app.get_next_question()
            halign: "center"
            disabled: True

        MDRaisedButton:
            id: next_button
            pos_hint: {"center_x": .5, "center_y": .3}
            font_style: "H5"
            text: "Next question"
            on_release: app.get_next_question()