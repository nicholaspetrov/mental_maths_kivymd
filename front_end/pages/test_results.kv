<Test_results@MDScreen>:
    id: test_screen
    name: "Test_results"

    MDBoxLayout:
        size_hint_y: 0.885
        padding: [10, 10, 10, 10]
#        size_hint_x: 0.9
        orientation: 'vertical'
        columns: 3
        spacing: 20
        MDCard:
            orientation: 'vertical'
            MDLabel:
                text: 'Test settings'
                font_style: 'H6'
                padding_x: 25
            MDGridLayout:
                size_hint_y: None
                cols: 2
                MDLabel:
                    padding_x: 50
                    text: 'Difficulty: '
                    font_style: "Subtitle1"
                MDLabel:
                    id: difficulty_label
                    padding_x: 50
                    text: ''
                    font_style: "Subtitle1"

                MDLabel:
                    padding_x: 50
                    text: 'Operator: '
                    font_style: "Subtitle1"
                MDLabel:
                    id: operator_label
                    padding_x: 50
                    text: ''
                    font_style: "Subtitle1"

                MDLabel:
                    padding_x: 50
                    text: 'Duration: '
                    font_style: "Subtitle1"
                MDLabel:
                    id: duration_label
                    padding_x: 50
                    text: ''
                    font_style: "Subtitle1"

        MDCard:
            orientation: 'vertical'
            MDLabel:
                text: 'Score'
                font_style: 'H6'
                padding_x: 25
            MDGridLayout:
                size_hint_y: None
                cols: 2
                MDLabel:
                    padding_x: 50
                    text: 'Correct answers/Questions answered: '
                    font_style: "Subtitle1"
                MDLabel:
                    id: correct_answers_label
                    padding_x: 50
                    text: ''
                    font_style: "Subtitle1"

                MDLabel:
                    padding_x: 50
                    text: 'Points scored/Total available: '
                    font_style: "Subtitle1"
                MDLabel:
                    id: score_label
                    padding_x: 50
                    text: ''
                    font_style: "Subtitle1"

                MDLabel:
                    padding_x: 50
                    text: 'Average speed: '
                    font_style: "Subtitle1"
                MDLabel:
                    id: speed_label
                    padding_x: 50
                    text: ''
                    font_style: "Subtitle1"

        MDCard:
            orientation: 'vertical'
            MDLabel:
                text: 'Graphs/Charts'
                font_style: 'H6'
                padding_x: 25
            MDLabel:
                text: 'Graphs to be added'
                halign: 'center'
            MDStackLayout:
                orientation: 'rl-bt'
                spacing: 10
                padding: 10
                MDRaisedButton:
                    text: "New test"
                    font_style: "Subtitle1"
                    pos_hint: {"center_x": 0.7, "center_y": .15}
                MDRaisedButton:
                    text: "Retry test"
                    font_style: "Subtitle1"
                    pos_hint: {"center_x": 0.3, "center_y": .15}

